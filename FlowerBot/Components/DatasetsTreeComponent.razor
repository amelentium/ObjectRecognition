<h3>Datasets Tree</h3>

<div class="col-md-4" style="margin-bottom: 16px">
    <RadzenTree Data="@Datasets"
                Change="@OnDatasetChange"
                Style="width: 100%; height: 250px">
        <RadzenTreeLevel HasChildren="@((value) => false)">
            <Template>
                <RadzenIcon Icon="folder" />
                @Path.GetFileName((string)context.Value)
            </Template>
        </RadzenTreeLevel>
    </RadzenTree>
</div>

@code {
    [Parameter]
    public string DatasetsPath { get; set; }
    [Parameter]
    public EventCallback<TreeEventArgs> OnDatasetChange { get; set; }

    private List<string> Datasets = new List<string>();

    protected override void OnInitialized()
    {

        Datasets = Directory.EnumerateFileSystemEntries(DatasetsPath)
                        .Where(x => !x.Contains("."))
                        .ToList();
    }
}
