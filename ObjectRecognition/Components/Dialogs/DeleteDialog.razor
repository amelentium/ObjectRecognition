@using ObjectRecognition.Enums;
@using ObjectRecognition.Extentions

@inherits Dialog;

<div class="dialog" active="@IsOpen.ToString()">
    <dialog open="@IsOpen">
        <h3>Confirm item deletion</h3>
        <p>Are you sure you want to delete the @(ItemName) @(ItemTypeName)?</p>
        <p>
            <button @onclick="Delete">Yes</button>
            <button @onclick="Close">No</button>
        </p>
    </dialog>
</div>

@code {
    [Parameter]
    public ItemType ItemType { get; set; }
    [Parameter]
    public string ItemName { get; set; }

    private string ItemTypeName => ItemType.ToString().SplitCamelCase();

    private void Delete()
    {
        Confirm();
    }
}
